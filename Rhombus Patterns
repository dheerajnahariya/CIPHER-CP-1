#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin>>n;
    int j;
    for (int i=0;i<n;i++)
    {
       // for(int j=(2*n)-1;j<=4;j--)
       for(j=n-i-1;j>=0;j--)
        cout<<" ";

       for(j=0;j<n;j++)
        cout<<"*";

       cout<<"\n";
    }

    cout<<"\n";
    int k;
    for (int i=0;i<n;i++)
    {
       // for(int j=(2*n)-1;j<=4;j--)
       for(k=n-i-1;k>=0;k--)
         cout<<" ";
      if(i==0 || i==n-1)
      {
        for(k=0;k<n;k++)
          cout<<"*";
      }
      else
      {
          for(int k=0;k<n;k++)
          {
            if(k==0 || k==n-1)
                cout<<"*";
            else
                cout<<" ";
          }
      }

      cout<<"\n";

     }
}

